<div class="form-container">
  <%= bootstrap_form_for @subscriber, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9", html: {class: "form", id: "new-subscriber"}, remote: true do |f| %>
    <%= f.email_field :email, label: "Email" %>
    <%= f.text_field :name, label: "Name" %>
    <%= f.submit "Subscribe", class: "btn btn-default btn-block" %>
  <% end %>
</div>
